@model CustomerManagement.Models.AddCollectionUserModel

@{
    ViewBag.Title = "Add Collection User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add User</h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("CreateCollectionUser", null, FormMethod.Post, new { role = "form", id = "FormUser", enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label for="Firstname" class="control-label col-md-4">First Name:</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Middlename" class="control-label col-md-4">Middle Name:</label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Middlename, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Middlename, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Lastname" class="control-label col-md-4">Last Name:</label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Lastname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Gender" class="control-label col-md-4">Gender:</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.Gender,
                                new SelectList(Model.sex, "GenderID", "Description"),
                                new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="PositionId" class="control-label col-md-4">Position:</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.PositionId,
                                new SelectList(Model.Position, "PositionId", "PositionName"),
                                "--Select Position--",
                                new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PositionId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="PositionId" class="control-label col-md-4">Street:</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.StreetId,
new SelectList(Model.Street, "StreetId", "StreetName"),
                                "--Select Street--",
                                new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.StreetId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6">

                        <div class="form-group">
                            <label for="Email" class="control-label col-md-4">Email:</label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Email)
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="Phone" class="control-label col-md-4">Phone:</label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Phone)
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Password" class="control-label col-md-4">Password:</label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Password)
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="CPassword" class="control-label col-md-4">Retype Password:</label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.CPassword)
                                @Html.ValidationMessageFor(model => model.CPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input class="btn btn-primary btn-sm" type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
