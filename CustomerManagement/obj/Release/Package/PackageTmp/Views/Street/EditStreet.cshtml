@model CustomerManagement.Models.EditStreetModel

@{
    ViewBag.Title = "EditStreet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditStreet</h2>

 @using (Html.BeginForm("UpdateStreet", null, FormMethod.Post, new { role = "form", id = "FormStreet", enctype = "multipart/form-data" }))
           {
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
                <hr />
        @Html.ValidationSummary(true)
        <div class="form-group disabled" >
            @*@Html.LabelFor(model => model.StreetId, new { @class = "control-label col-md-2" })*@
            <div class="col-md-10 disabled" >
                @Html.EditorFor(model => model.StreetId)
                @Html.ValidationMessageFor(model => model.StreetId)
            </div>
        </div>

        <div class="form-group form-inline" >
            @Html.LabelFor(model => model.StreetName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StreetName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.StreetName) 
                        </div>
        </div>

        <div class="form-group form-inline ">
            <div class="col-md-offset-6 col-md-6">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

