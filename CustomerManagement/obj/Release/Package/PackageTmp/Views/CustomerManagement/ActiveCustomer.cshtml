@model IEnumerable<CustomerManagement.Models.CustomerListModel>
@{
    ViewBag.Title = "ActiveCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Active Customer List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-sm" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Street
                            </th>
                            <th>
                                City
                            </th>
                            <th>
                                State
                            </th>
                        </tr>
                    </thead>
                    <tbody class="tbody_style">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerStreet)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerCity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerState)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


